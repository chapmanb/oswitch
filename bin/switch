#!/usr/bin/env ruby

require 'switch'
require 'optparse'

options = {}
collect = lambda do |key|
  lambda do |value|
    options[key] = value
  end
end

optspec = OptionParser.new do |opts|
  opts.banner = "Usage: switch [options] <package> [cmd]"

  opts.on '-l', '--list',
          'List packages.',
          &collect[:list]

  opts.on '-h', '--help',
          'Print help.',
          &collect[:help]
end

begin
  optspec.order!
rescue OptionParser::InvalidOption,
       OptionParser::MissingArgument => e
  puts e
  exit
end

if options[:help] || (options.empty? && ARGV.empty?)
  puts optspec
  exit
end

if options[:list]
  puts Switch.packages
  exit
end

package = ARGV[0]
command = ARGV[1..-1]
Switch.to(package, command)
